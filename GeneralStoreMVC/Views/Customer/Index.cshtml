@model IEnumerable<GeneralStoreMVC.Models.Customer.CustomerListItem>

<h1 class="text-center">All Customer</h1>
<a href=" /customer/create" class="text-primary">Create a customer</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = @customer.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = @customer.Id}) |
                    @Html.ActionLink("Delete", "Delete", new { id = @customer.Id })
                </td>
            </tr>
        }
    </tbody>
</table>